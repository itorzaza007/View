<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.tortoey.view.MainActivity">

    <ImageView
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_view1"
        android:tint="#66000000" />
    <ImageView
        android:layout_margin="15dp"
        android:contentDescription="@null"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_pixa"
        android:tint="#66000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/button_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="50"
                android:background="@drawable/login_selector"
                android:text="@string/log_in"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAllCaps="false"

                />

            <Button
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="50"
                android:background="@drawable/click_selector"
                android:text="@string/get_start"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_text2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/set_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't already here a  "
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
